{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",

    "lib": [
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ],
      "~/*": [
        "app/*"
      ]
     },
    "typeRoots": [
      "types"
    ],
    "types": [
      "node",
      "webpack-env",
      "jest",
      "jasmine",
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "outDir": "$$ts-jest$$",
  "include": [
    "app/**/*",
    "app",
    "types",
    // "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "platforms",
    "App_Resources",
    "hooks",
    "layout",
    "coverage",
    "**/*.test.ts"
  ]
}
