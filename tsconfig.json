{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "~/*": ["app/*"]
    },
    "typeRoots": ["types"],
    "types": ["node", "webpack-env", "mocha", "chai"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "outDir": "dist",
  "include": ["app/**/*", "app", "types", "tests"],
  "exclude": ["node_modules", "platforms", "App_Resources", "hooks", "layout", "reports"]
}
