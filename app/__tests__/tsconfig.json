{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",

    "lib": [
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ]
     },
    "typeRoots": [
      "types"
    ],
    "types": [
      "node",
      "webpack-env"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "app/**/*",
    "app",
    "types",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "platforms"
  ]
}
